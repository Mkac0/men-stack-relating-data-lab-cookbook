<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Pantry</title>
</head>
<body>
    <%- include('../partials/_navbar.ejs') %>
    <div class="all-recipes">
        <h1>Welcome to my Pantry</h1>
        <a class="all-recipes" href="/users/<%= user._id %>/pantry/new"
            >Add Recipes</a>
    </div>
    <ul>
        <% pantry.forEach(food) => { %>
        <a href="/users/<%= user._id %>/pantry/<%= food._id %>">
            <li><%= food.name %> at <%= food.recipe %></li>
        </a>
        <% }) %>
    </ul>
</body>
</html>